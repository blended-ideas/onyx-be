{
  "name": "express-rest-es2017-boilerplate",
  "version": "1.2.2",
  "description": "Express boilerplate for building RESTful APIs",
  "author": "Daniel Sousa <sousa.dfs@gmail.com>",
  "main": "src/index.js",
  "private": false,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "prestart": "npm run docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "validate": "npm run lint && npm run test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "open-cli docs/index.html",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:danielfsousa/express-rest-es2017-boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "passport",
    "es6",
    "es7",
    "es8",
    "es2017",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "Travis CI",
    "coveralls",
    "REST",
    "API",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "dependencies": {
    "axios": "^0.25.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^8.2.0",
    "email-templates": "^8.0.8",
    "express": "^4.15.2",
    "express-validation": "^3.0.8",
    "helmet": "^5.0.2",
    "http-status": "^1.0.1",
    "joi": "^17.6.0",
    "jwt-simple": "0.5.6",
    "lodash": "^4.17.4",
    "method-override": "^3.0.0",
    "moment-timezone": "^0.5.13",
    "mongoose": "^6.2.1",
    "morgan": "^1.8.1",
    "nodemailer": "^6.3.1",
    "passport": "^0.5.2",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "pm2": "^5.1.0",
    "pug": "^3.0.1",
    "uuid": "^8.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.50.4",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3 .0.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^13.1.1",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.1",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.0.0",
    "supertest": "^6.1.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
